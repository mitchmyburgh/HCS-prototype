<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hcs.prototype.hcs_prototype.CaseStudyActivity" android:orientation="vertical">

    <TextView android:id="@+id/desc_display" android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/data_display" android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_login"
        android:id="@+id/question_button_1"
        android:layout_centerHorizontal="true"
        android:onClick="askQuestion"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_login"
        android:id="@+id/question_button_2"
        android:layout_centerHorizontal="true"
        android:onClick="askQuestion"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_login"
        android:id="@+id/question_button_3"
        android:layout_centerHorizontal="true"
        android:onClick="askQuestion"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_login"
        android:id="@+id/question_button_4"
        android:layout_centerHorizontal="true"
        android:onClick="askQuestion"
        />

</LinearLayout>
